{
    "name": "codingmatters/zend-expressive-zend-component",
    "type": "library",
    "license": "MIT",
    "extra": {
        "zf": {
            "config-provider": "Zend\\Component\\ConfigProvider"
        }
    },    
    "autoload": {
        "psr-4": {
            "Zend\\Component\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Component\\": "test/"
        }
    },
    "require": {
        "php": "^7.1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive-zendviewrenderer": "^1.2",
        "zendframework/zend-expressive-zendrouter": "^2.0",
        "zendframework/zend-servicemanager": "^3.2",
        "ocramius/proxy-manager": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "zendframework/zend-coding-standard": "^1.0",
        "sebastian/phpcpd": "^2.0"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@cpd",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "cpd": "phpcpd --exclude=/vendor,/build --fuzzy src test",
        "test": "phpunit --verbose --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
